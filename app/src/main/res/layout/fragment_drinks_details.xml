<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#38393B"
    android:orientation="vertical"
    tools:context=".ui.MainFragment">

    <TextView
        android:id="@+id/title_bebida"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Nombre Bebida"
        android:textColor="#EDF3FA"
        android:textSize="25sp"
        android:textStyle="italic" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/img_bebida"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/describe_txt"
        android:layout_width="387dp"
        android:layout_height="189dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="hola"
        android:textAlignment="center"
        android:textColor="#EDF3FA"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_guardar_bebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_24"
            app:backgroundTint="#F50087" />
    </LinearLayout>
</LinearLayout>